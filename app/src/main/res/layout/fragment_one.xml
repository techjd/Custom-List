<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentOne">





    <ImageView
        android:visibility="visible"
        android:id="@+id/imageView8"
        android:layout_width="347dp"
        android:layout_height="400dp"
        android:src="@drawable/ic_blue_circle"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="112dp"
        android:layout_height="99dp"
        android:src="@drawable/ic_bubbles"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="27dp"
        android:scaleType="fitXY"
        android:src="@drawable/world"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="118dp"
        android:layout_height="154dp"
        android:layout_marginTop="28dp"
        android:scaleType="fitXY"
        android:src="@drawable/friends_right"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="78dp"
        android:scaleType="fitXY"
        android:src="@drawable/dance"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/money"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginTop="160dp"
        android:scaleType="fitXY"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="93dp"
        android:scaleType="fitXY"
        android:src="@drawable/gift"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:text="Welcome to PayNav"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/plusjakartasans_medium"
        android:gravity="center"
        android:lineHeight="26dp"
        android:text="PayNav, is the easy way to share gifts,
expenses and experiences with friends &amp; groups."
        android:textColor="#4B4D5F"
        android:textSize="15dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueBtn"
        android:layout_width="371dp"
        android:layout_height="58dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/plusjakartasans_medium"
        android:foreground="?attr/selectableItemBackground"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:visibility="gone"
        app:backgroundTint="#2E2B69"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/letsGetStarted"
        style="@style/materialButton"
        android:layout_width="254dp"
        android:layout_height="58dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/let_get_started_bcg"
        android:fontFamily="@font/plusjakartasans_medium"
        android:foreground="?attr/selectableItemBackground"
        android:text="Let's Get Started"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:visibility="visible"
        app:backgroundTint="#2E2B69"
        app:icon="@drawable/arrow"
        app:iconGravity="textEnd"
        app:iconSize="24dp"
        app:iconTint="#FFC852"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.828"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:text="Skip"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:visibility="visible"
        android:src="@drawable/ic_first_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:visibility="visible"
        android:src="@drawable/ic_indicator_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress" />


</androidx.constraintlayout.widget.ConstraintLayout>