<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:elevation="100dp"
    android:layout_margin="5dp"
    android:orientation="vertical">

<!--    100dp Worked -->

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="110dp"
        android:layout_height="165dp"
        android:elevation="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/swiggy"
                        />

                    <RelativeLayout
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_rounded_text_view"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/coin"
                                android:layout_width="23dp"
                                android:layout_height="20dp"
                                android:src="@drawable/shop_coin" />

                            <TextView
                                android:id="@+id/uptoDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/plusjakartasans_medium"
                                android:text="Upto 9% Gold"
                                android:textColor="#3473E4"
                                android:textSize="11dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plusjakartasans_semibold"
        android:gravity="center"
        android:text="Swiggy"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15dp" />

</LinearLayout>